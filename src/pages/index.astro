---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="min-h-screen bg-slate-100">
    <Header title={SITE_TITLE} />
    <main>
      <!-- Hero -->
      <section class="flex flex-col items-center justify-center p-10 space-y-4">
        <!-- Hero Text -->
        <div class="text-3xl font-bold text-center text-slate-800">
          <h1>Stop overpaying for audio plugins!</h1>
        </div>
        <div class="text-2xl text-center text-slate-800 md:m-72">
          <h2>
            Get the best deals audio plugin deals delivered to your inbox every
            week.
          </h2>
        </div>
      </section>
      <Footer />
    </main>
  </body>
</html>
